	"version": "0.2.0",
	"configurations": [
		{
			"name": "Python: Current File",
			"type": "python",
			"request": "launch",
			"program": "${file}"
		},
		{
			"name": "Python: Attach",
			"type": "python",
			"request": "attach",
			"localRoot": "${workspaceFolder}",
			"remoteRoot": "${workspaceFolder}",
			"port": 3000,
			"secret": "my_secret",
			"host": "localhost"
		},
		{
			"name": "Python: Flask (0.11.x or later)",
			"type": "python",
			"request": "launch",
			"module": "flask",
			"env": {
				"FLASK_APP": "${workspaceFolder}/start.py",
				"PORT": 3000
			},
			"args": [
				"run",
				//"--no-debugger",
				//"--no-reload"
			]
		},
		{
			"name": "Flask (linux/osx)",
			"type": "python",
			"request": "launch",
			"stopOnEntry": false,
			//"pythonPath": "${config.python.pythonPath}",
			"program": "${workspaceFolder}/forge/bin/flask",
			"env": {
				"FLASK_APP": "${workspaceRoot}/start.py"
			},
			"args": [
				"run",
				"--no-debugger",
				"--no-reload"
			],
			"debugOptions": [
				"RedirectOutput"
			]
		},
		{
			"name": "Test",
			"type": "python",
			"request": "launch",
			"stopOnEntry": false,
			//"pythonPath": "${config.python.pythonPath}",
			"program": "${workspaceRoot}/start.py",
			"debugOptions": [
				"RedirectOutput"
			]
		}

	]
}